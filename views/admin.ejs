                            <i class="fas fa-clock"></i>
                            <p>Aucune commande en cours</p>
                        </div>
                    <% } else { %>
                        <% pendingOrders.forEach(commande => { %>
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <h3>ğŸ‘¤ <%= commande.student_name || commande.studentName || commande.nom %></h3>
                                    <div class="timestamp">ğŸ•’ <%= commande.timestamp || new Date(commande.date).toLocaleString('fr-FR') %></div>
