                                    <option value="En prÃ©paration" <%= (commande.status || 'En attente') === 'En prÃ©paration' ? 'selected' : '' %>>ğŸ‘¨â€ğŸ³ En prÃ©paration</option>
                                    <option value="PrÃªte" <%= (commande.status || 'En attente') === 'PrÃªte' ? 'selected' : '' %>>âœ… PrÃªte</option>
                                    <option value="LivrÃ©e" <%= (commande.status || 'En attente') === 'LivrÃ©e' ? 'selected' : '' %>>ğŸšš LivrÃ©e</option>
                                </select>
                                <button class="delete-btn" onclick="deleteOrder(<%= commande.id || Date.now() %>)" title="Supprimer la commande">
                                    <i class="fas fa-trash"></i>
